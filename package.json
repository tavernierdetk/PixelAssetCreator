{
  "name": "pixelart-backbone",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "turbo run format",
    "dev:infra": "docker compose up -d redis",
    "smoke": "bash ./scripts/smoke-local.sh",
    "dev:workers": "pnpm -w --filter @app/workers dev",
    "workers": "pnpm -w --filter @app/workers run dev",
    "dev:stack": "pnpm -w run dev:infra && turbo run build --filter=@app/api^... --filter=@app/web^... --filter=@app/workers^... && turbo run dev --parallel --filter=@app/api --filter=@app/web --filter=@app/workers"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "rimraf": "^5.0.10",
    "turbo": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@pixelart/sprite-compose": "workspace:*",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "fast-json-patch": "^3.1.1",
    "openai": "^5.19.1",
    "zod": "^4.1.5"
  }
}
