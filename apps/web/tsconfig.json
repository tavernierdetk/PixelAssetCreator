{
"extends": "../../tsconfig.base.json",
"compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
        "@/*": ["src/*"]
        },
    "allowJs": false,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client", "vitest/globals"]

},
"include": ["src", "vite.config.ts"]
}